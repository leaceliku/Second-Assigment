<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pcadministrator.fitnesstracking.MainActivity"
    android:background="#1C2833">

    <Button
        android:text="@string/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_save"
        android:layout_alignBaseline="@+id/button_end"
        android:layout_alignBottom="@+id/button_end"
        android:layout_alignParentEnd="true"
        android:background="@drawable/color"
        android:textColor="#FFFFFF"/>

    <Button
        android:text="@string/button_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_end"
        android:background="@drawable/color"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_pause"
        android:background="@drawable/color"
        android:drawableBottom="@mipmap/pause_icon1"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button_end" />

    <TextView
        android:text="Information"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/text_info"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/button_save"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <Chronometer
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/chronometer"
        android:visibility="visible"
        android:text="Chronometer"
        android:typeface="serif"
        android:textSize="120dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/text_info"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/button_start"
        android:layout_height="wrap_content"
        android:id="@+id/button_start"
        android:layout_width="150dp"
        android:background="@drawable/color"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:text="@string/button_history"
        android:layout_height="wrap_content"
        android:id="@+id/button_history"
        android:layout_width="150dp"
        android:background="@drawable/color"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/button_start"
        android:layout_alignBottom="@+id/button_start"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
